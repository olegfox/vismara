            <div class="wrapperContent">
                <div class="content contentWhite">
                    <form name="form" action="" method="post" class="form-horizontal" ng-controller="FeedbackController" novalidate>
                        <div class="form-group">
                            <span>*</span>{{ form_widget(form.nameCompany) }}
                        </div>
                        <div class="form-group">
                            <span>*</span>{{ form_widget(form.city) }}
                        </div>
                        <div class="form-group">
                            <span>*</span>{{ form_widget(form.contactName) }}
                        </div>
                        {% for e in form.email %}
                            <div class="form-group">
                                <span>*</span>{{ form_widget(e) }}
                            </div>
                        {% endfor %}
                        <div class="form-group">
                            {{ form_widget(form.message) }}
                        </div>
