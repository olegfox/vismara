<div class="wrapperContent">
    <div class="content contentWhite">
<div class="wrap_post">
    <h2>
        <span class="date">{{ n.created|date("d.m.y") }}</span>
        <a href="{{ path('news_post', {slug: n.slug}) }}">
            {% if app.request.locale == "en" %}
                {% set title = n.title %}
                {% set description = n.description %}
                {{ n.title }}
            {% elseif app.request.locale == "it" %}
                {% set title = n.titleIt %}
                {% set description = n.descriptionIt %}
                {{ n.titleIt }}
            {% elseif app.request.locale == "ru" %}
                {% set title = n.titleRu %}
                {% set description = n.descriptionRu %}
                {{ n.titleRu }}
            {% endif %}
        </a>
    </h2>
    {% if n.images|length > 0 %}
        <div class="gallery">
            {% for i in n.images %}
                {% if loop.index == 1 %}
                    <img src="{{ image(i.src).cropResize(835) }}" />
                    <a href="{{ asset(i.src) }}" class="fancybox play" rel="group{{ n.id }}">
                        <img src="{{ asset('sitemain/img/play.png') }}"
                             width="216px" height="216px"
                             alt=""/>
                    </a>
                {% else %}
                    <a href="{{ asset(i.src) }}" class="fancybox hide" rel="group{{ n.id }}"></a>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
    {% if n.getVideo().id is defined %}
        <div class="videos">
            <div class="wrap_video">
                <div class="video">
                    <a href="http://www.youtube.com/embed/{{ n.getVideo().getProviderReference() }}?fs=1&amp;autoplay=1">
                        <img src="{{ asset('sitemain/img/play.png') }}"
                             width="216px" height="216px"
                             alt="{{ asset('sitemain/img/play.png') }}"/>
                    </a>
                    <img src="{{ image(n.getVideo().getProviderMetadata()['thumbnail_url']).zoomCrop(835, 470) }}"
                         width="835px"
                         alt="{% if app.request.locale == "en" %}{{ n.title }}{% elseif app.request.locale == "it" %}{{ n.titleIt }}{% elseif app.request.locale == "ru" %}{{ n.titleRu }}{% endif %}"/>
                    <div class="background"></div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="description">
        {% if app.request.locale == "en" %}
            {{ n.text|raw }}
        {% elseif app.request.locale == "it" %}
            {{ n.textIt|raw }}
        {% elseif app.request.locale == "ru" %}
            {{ n.textRu|raw }}
        {% endif %}
    </div>
    <div class="social">
        <script type="text/javascript">(function() {
                if (window.pluso)if (typeof window.pluso.start == "function") return;
                if (window.ifpluso==undefined) { window.ifpluso = 1;
                    var d = document, s = d.createElement('script'), g = 'getElementsByTagName';
                    s.type = 'text/javascript'; s.charset='UTF-8'; s.async = true;
                    s.src = ('https:' == window.location.protocol ? 'https' : 'http')  + '://share.pluso.ru/pluso-like.js';
                    var h=d[g]('body')[0];
                    h.appendChild(s);
                }})();</script>
        <div class="pluso" data-background="transparent" data-options="medium,square,line,horizontal,counter,theme=04" data-services="facebook,twitter,google" data-url="http://{{ app.request.host }}{{ path('news_post', {slug: n.slug}) }}" data-title="{{ title }}" data-description="{{ description }}"></div>
    </div>
</div>
        </div>
    </div>