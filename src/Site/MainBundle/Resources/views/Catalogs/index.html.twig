{% endblock %}

{% block content %}
    <div class="bottombox">
        <div class="c950">
            <h2>
                {{ "form_catalog.head"|trans }}<br/><br/>
                {{ "form_catalog.head_link"|trans }}<br/><br/>
                <a class="button_register" href="{{ path('client_register') }}">{{ "form_catalog.head_link2"|trans }}</a>
                <a class="button_register" href="{{ path('client_login') }}">{{ "form_catalog.login"|trans }}</a>
            </h2>
        </div>
    </div>
{% endblock %}

