{% extends 'SiteMainBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% if page.background.id is defined %}
        <style type="text/css">
            body {
                background: url("{{ asset("sitemain/img/bg_form.jpg") }}");
                background-size: cover;
            }
        </style>
    {% endif %}
{% endblock %}

{% block slider %}
{% endblock %}

{% block content %}
    <div class="bottombox">
        <div class="c950">
            {% if error %}
                <div class="error">{{ error.messageKey|trans(error.messageData) }}</div>
            {% endif %}

            <form id="catalogFeedback" action="{{ path('client_login_check') }}" method="post" class="form-horizontal">
                <div class="form-group">
                    <div class="pull-left">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'form_catalog.email'|trans }}" />
                        <input class="form-control" type="password" id="password" name="_password" placeholder="{{ 'form_catalog.password'|trans }}" />
                    </div>

                    <div class="form-actions clearfix">
                        <button class="btn btn-success btn-lg" type="submit">{{ 'form_catalog.login'|trans }}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block footerImg %}
{% endblock %}

{% block footer %}
{% endblock %}
