    <div class="wrap">
        <div class="wrapper-header layout-max">
            <div class="header layout">
                <a  class="logo" href="{{ path('Site_main_homepage') }}">
                    <img src="{{ asset('sitemain/img/logo.jpg') }}" width="249" height="71" alt=""/>
                </a>
            </div>
        </div>
        <div class="wrapper-slogan layout-max">
            <div class="wrapper-nav layout-max {% if app.request.attributes.get('_route') == 'Site_main_homepage' %}wrapper-nav-main{% endif %}">
                <div class="nav layout">
                    {{ knp_menu_render('SiteMainBundle:FrontendMenuBuilder:menu') }}
                </div>
            </div>
            {% block slider %}
            {% endblock %}
        </div>
        {% block content %}
        {% endblock %}
        {% block footerImg %}
            <div class="wrapper-img layout-max wrapper-img-footer">
                {% if page is defined and catalog is not defined %}
                    {% if page.dark == false %}
                        <div></div>
                    {% endif %}
                {% elseif catalog is defined %}
                    {% if catalog.dark == false %}
                        <div></div>
                    {% endif %}
                {% endif %}
                <div class="footer_text">
                    VISMARA DESIGN  <span class="icon_reg"><span>&reg;</span></span>   Via Carducci n° 3    20822 Seveso - MB - Italy. All rights reserved.
                </div>
            </div>
        {% endblock %}
        {% block footer %}
            <div class="wrapper-footer layout-max">
            </div>
        {% endblock %}
    </div>
    <div class="icone">
        <a href="http://instagram.com/vismaradesignitaly" target="_blank">
            <img src="{{ asset('sitemain/img/icone/instagram.png') }}" alt="instagram" width="27" height="27" border="0">
        </a><a href="http://www.facebook.com/VismaraDesign" target="_blank">
            <img src="{{ asset('sitemain/img/icone/facebook.png') }}" alt="facebook" width="27" height="27" border="0">
        </a><a href="http://www.youtube.com/user/VismaraDesignItaly" target="_blank">
            <img src="{{ asset('sitemain/img/icone/youtube.png') }}" alt="youtube" width="27" height="27" border="0">
        </a><a href="https://twitter.com/VismaraDesignIt?lang=it" target="_blank">
            <img src="{{ asset('sitemain/img/icone/twitter.png') }}" alt="twitter" width="27" height="27" border="0">
        </a><a href="http://www.pinterest.com/VismaraDesign1/" target="_blank">
            <img src="{{ asset('sitemain/img/icone/pinterest.png') }}" alt="pinterest" width="27" height="27" border="0">
        </a><a href="https://plus.google.com/+vismaradesignitaly" target="_blank" rel="publisher">
            <img src="{{ asset('sitemain/img/icone/google.png') }}" alt="google" width="27" height="27" border="0">
        </a>
    </div>
    <div class="language">
        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}"
           {% if app.request.locale == 'en' %}class="selected"{% endif %}>en</a>
        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'it'})) }}"
           {% if app.request.locale == 'it' %}class="selected"{% endif %}>it</a>
        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'ru'})) }}"
           {% if app.request.locale == 'ru' %}class="selected"{% endif %}>ru</a>
        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'cn'})) }}"
           {% if app.request.locale == 'cn' %}class="selected"{% endif %}>中文</a>
    </div>
{% endblock %}
{% block javascriptsTop %}
    <script src='{{ asset('sitemain/js/photoswipe/lib/jquery-1.6.1.min.js') }}'></script>
{% endblock %}
{% block javascripts %}
    <!-- script -->
    {#<script src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.js'></script>#}
    <script src="{{ asset("sitemain/js/jquery.placeholder.js") }}"></script>
    <script type="text/javascript">
        function showMenu(object){
            if($(object).parent().find("ul").eq(0).css("display") == 'block'){
                $(object).parent().find("ul").eq(0).hide();
            }else{
                $(object).parent().find("ul").eq(0).show();
            }
        }
    </script>
{% endblock %}