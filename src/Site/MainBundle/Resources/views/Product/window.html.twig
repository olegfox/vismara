{% if product is defined %}
    <div class="wrap-window-product">
        <div class="left wowload fadeInLeft"></div>
        <div class="right wowload fadeInRight"></div>
        <div class="window-product wowload bounceInUp">
            <div class="close"></div>
            <div class="box-product">
                <div class="gallery-list">
                    <ul>
                        <li>
                            <a href="javascript:showThumbnailProduct('{{ asset('.'~media_public_url(product.preview, 'reference')) }}');">
                                <img src="{{ image('.'~media_public_url(product.preview, 'reference')).cropResize(120) }}" alt=""/>
                            </a>
                        </li>
                        {% for i in product.images %}
                            <li>
                                <a href="javascript:showThumbnailProduct('{{ asset(i.src) }}');">
                                    <img src="{{ image(i.src).cropResize(120) }}" alt=""/>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="image">
                    <div class="table">
                        <div class="table-cell">
                            <img src="{{ asset('.'~media_public_url(product.preview, 'reference')) }}" alt=""/>
                        </div>
                    </div>
                </div>

                <div class="description">
                    {% if product.collectionImage.id is defined %}
                    <div class="collection-image">
                        <img src="{{ image('.'~media_public_url(product.collectionImage, 'reference')).cropResize(200) }}" alt=""/>
                    </div>
                    {% endif %}
                    <h1>
                        {% if app.request.locale == "en" %}
                            {{ product.title }}
                        {% elseif app.request.locale == "it" %}
                            {{ product.titleIt }}
                        {% elseif app.request.locale == "cn" %}
                            {{ product.titleCn }}
                        {% elseif app.request.locale == "ru" %}
                            {{ product.titleRu }}
                        {% endif %}
                    </h1>
                    <div class="text">
                        {% if app.request.locale == "en" %}
                            {{ product.text|raw }}
                        {% elseif app.request.locale == "it" %}
                            {{ product.textIt|raw }}
                        {% elseif app.request.locale == "cn" %}
                            {{ product.textCn|raw }}
                        {% elseif app.request.locale == "ru" %}
                            {{ product.textRu|raw }}
                        {% endif %}
                    </div>
                    {% if product.colors|length > 0 %}
                        <div class="colors">
                            <h2>{{ 'product.colors'|trans }}</h2>
                            <div class="collection-thumb">
                                <div>
                                    {% for color in product.colors %}<div class="content-collection">
                                        <div class="cf-image-name">
                            <span>
                                <img src="{{ image(color.webPath).zoomCrop(236, 236) }}" alt="">
                            </span>
                                <span class="cf-name">
                                    {% if app.request.locale == "en" %}
                                        {{ color.title }}
                                    {% elseif app.request.locale == "it" %}
                                        {{ color.titleIt }}
                                    {% elseif app.request.locale == "cn" %}
                                        {{ color.titleCn }}
                                    {% elseif app.request.locale == "ru" %}
                                        {{ color.titleRu }}
                                    {% endif %}
                                </span>
                                        </div>

                                        <div class="cf-m-info">
                                            <img src="{{ image(color.webPath).zoomCrop(236, 236) }}" alt="">
                                <span class="cf-m-info-prod-name">
                                    {% if app.request.locale == "en" %}
                                        {{ color.title }}
                                    {% elseif app.request.locale == "it" %}
                                        {{ color.titleIt }}
                                    {% elseif app.request.locale == "cn" %}
                                        {{ color.titleCn }}
                                    {% elseif app.request.locale == "ru" %}
                                        {{ color.titleRu }}
                                    {% endif %}
                                </span>
                                <span class="cf-m-info-descr">
                                    {% if app.request.locale == "en" %}
                                        {{ color.description }}
                                    {% elseif app.request.locale == "it" %}
                                        {{ color.descriptionIt }}
                                    {% elseif app.request.locale == "cn" %}
                                        {{ color.descriptionCn }}
                                    {% elseif app.request.locale == "ru" %}
                                        {{ color.descriptionRu }}
                                    {% endif %}
                                </span>
                                        </div>
                                        </div>{% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {% if product.size|length > 0 %}
                        <div class="size">
                            <h2>{{ 'product.sizes'|trans }}</h2>
                            {% if app.request.locale == "en" %}
                                {{ product.size|raw }}
                            {% elseif app.request.locale == "it" %}
                                {{ product.sizeIt|raw }}
                            {% elseif app.request.locale == "cn" %}
                                {{ product.sizeCn|raw }}
                            {% elseif app.request.locale == "ru" %}
                                {{ product.sizeRu|raw }}
                            {% endif %}
                        </div>
                    {% endif %}
                </div>

                <button>{{ 'send request'|trans }}</button>
            </div>
        </div>
    </div>
{% endif %}